# Compilador
CC = gcc

# Nome do executável
TARGET = main.exe

# Caminhos padrão de include e lib do MSYS2
INCLUDE_PATH = C:/msys64/mingw64/include
LIB_PATH = C:/msys64/mingw64/lib
BIN_PATH = C:/msys64/mingw64/bin

# Flags de compilação
CFLAGS = -Wall -std=c99 -I$(INCLUDE_PATH)
LIBS = -L$(LIB_PATH) -lraylib -lopengl32 -lgdi32 -lwinmm

# Arquivos fonte
SRC = src/main.c        # <- corrigido para a pasta src

# Regra padrão: compilar
all: $(TARGET)

# Compilação
$(TARGET): $(SRC)
	$(CC) $(SRC) -o $(TARGET) $(CFLAGS) $(LIBS)

# Rodar o programa
run: $(TARGET)
	./$(TARGET)

# Limpar arquivos gerados
clean:
	del $(TARGET) 2>nul
	del raylib.dll 2>nul
