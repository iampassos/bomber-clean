# Compilador
CC = gcc

# Nome do executável
TARGET = main.exe

# Caminhos padrão de include e lib do MSYS2
INCLUDE_PATH = C:/msys64/mingw64/include
LIB_PATH = C:/msys64/mingw64/lib

# Flags de compilação
CFLAGS = -Wall -std=c99 -Isrc -I$(INCLUDE_PATH)
LIBS = -L$(LIB_PATH) -lraylib -lopengl32 -lgdi32 -lwinmm

# Todos os arquivos fonte em src/ e subpastas (Windows)
SRC = $(shell dir /b /s src\*.c)

# Regra padrão: compilar tudo direto
all: $(TARGET)

$(TARGET): $(SRC)
	$(CC) $(SRC) -o $(TARGET) $(CFLAGS) $(LIBS)

# Rodar o programa
run: $(TARGET)
	./$(TARGET)

# Limpar arquivos gerados
clean:
	del $(TARGET) 2>nul

# Comando para rodar:
# mingw32-make -f Makefile
